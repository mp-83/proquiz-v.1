<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Code challenge</title>
  </head>
  <body>
	<div>
		<button id="start-btn">Start</button>
	</div>
	<div id="first-question-section">
	    <div>
			<h4>Q.{{index}}</h4>
			<p>{{text}}</p>
		</div>
			{% if code %}
		<pre cols="4">
		<code>{{code}}</code>
		</pre>
			{% endif %}
		<div>
			<input type="text">
		</div>
	</div>
	<div>
		<button id="next-btn" display="center" hidden>Next</button>
	</div>
  </body>
  <script>
	const startBtn = document.getElementById("start-btn");
	const firstCodeSection = document.getElementById("first-question-section");
	startBtn.addEventListener("click", function(event) {
		firstCodeSection.hidden = false;
	});
  </script>
</html>
